<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RxjavaUtilityActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_delay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delay操作符"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_do"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do操作符"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_onErrorReturn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="onErrorReturn操作符"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_onErrorResumeNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="onErrorResumeNext操作符"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_retry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="retry操作符"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_retry_until"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="retryUntil操作符"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_retry_when"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="retryWhen操作符"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="repeat操作符"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_repeat_when"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="repeatWhen操作符"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>