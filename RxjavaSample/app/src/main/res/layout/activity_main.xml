<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_rx_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建操作符"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_rx_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="变换操作符"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_rx_create" />

    <Button
        android:id="@+id/btn_rx_merge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="合并操作符"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_rx_change" />

    <Button
        android:id="@+id/btn_rx_utility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实用操作符"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_rx_merge" />

</androidx.constraintlayout.widget.ConstraintLayout>