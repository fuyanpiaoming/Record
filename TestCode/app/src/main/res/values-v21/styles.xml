<resources>
    <style name="ActivityStatusBar.Transparent" parent="ActivityTheme">
        <!--设置状态栏透明-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--Appbar/Toolbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/gray</item>
        <!--底部导航栏颜色-->
        <item name="android:navigationBarColor">@color/light_blue</item>
        <!--ToolBar上的Title颜色-->
        <item name="android:textColorPrimary">@color/light_grey</item>
        <!--各个控制控件的默认颜色-->
        <item name="android:colorControlNormal">@color/lavender</item>
    </style>
</resources>