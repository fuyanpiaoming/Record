<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TestAnimationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_q1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/q1" />

        <ImageView
            android:id="@+id/image_q2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/q2" />

        <ImageView
            android:id="@+id/image_q3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/q9" />

        <ImageView
            android:id="@+id/image_q4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/animation_list_test" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/traditional_anim_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_frame_anim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/color_ruo_cao"
            android:gravity="center"
            android:text="帧动画"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_property_anim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/color_ruo_cao"
            android:gravity="center"
            android:text="属性动画"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_rotate_anim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/color_ruo_cao"
            android:gravity="center"
            android:text="旋转"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_translate_anim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/color_ruo_cao"
            android:gravity="center"
            android:text="平移"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_scale_anim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/color_ruo_cao"
            android:gravity="center"
            android:text="缩放"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_alpha_anim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/color_ruo_cao"
            android:gravity="center"
            android:text="透明"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/traditional_anim_layout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_object_anim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/color_ruo_cao"
            android:gravity="center"
            android:text="Object"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_value_anim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/color_ruo_cao"
            android:gravity="center"
            android:text="Value"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_set_anim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/color_ruo_cao"
            android:gravity="center"
            android:text="AnimationSet"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_hloder_anim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/color_ruo_cao"
            android:gravity="center"
            android:text="PropertyHolder"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>