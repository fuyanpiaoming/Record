<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".network.TestHttpUrlActivity">

    <TextView
        android:id="@+id/txt_http_show_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/hello_world"/>

    <ImageView
        android:id="@+id/iv_http_show_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/btn_http_get_content"
        app:layout_constraintTop_toBottomOf="@id/txt_http_show_result"
        android:src="@mipmap/ic_launcher"/>

    <Button
        android:id="@+id/btn_http_get_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_http_show_img"
        android:text="@string/network_httpurl_get_content" />


    <Button
        android:id="@+id/btn_http_get_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/btn_http_get_content"
        app:layout_constraintTop_toBottomOf="@id/btn_http_get_content"
        android:text="@string/network_httpurl_get_picture" />

    <Button
        android:id="@+id/btn_http_test_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/btn_http_get_content"
        app:layout_constraintTop_toBottomOf="@id/btn_http_get_picture"
        android:text="@string/network_httpurl_test_get" />

    <Button
        android:id="@+id/btn_http_test_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/btn_http_get_content"
        app:layout_constraintTop_toBottomOf="@id/btn_http_test_get"
        android:text="@string/network_httpurl_test_post" />

    <Button
        android:id="@+id/btn_http_test_post_param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/btn_http_get_content"
        app:layout_constraintTop_toBottomOf="@id/btn_http_test_post"
        android:onClick="testPostParam"
        android:text="@string/network_httpurl_test_post_param" />

    <Button
        android:id="@+id/btn_http_test_post_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/btn_http_get_content"
        app:layout_constraintTop_toBottomOf="@id/btn_http_test_post_param"
        android:onClick="testPostJson"
        android:text="@string/network_httpurl_test_post_json" />

</android.support.constraint.ConstraintLayout>