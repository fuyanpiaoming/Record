<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".network.TestHttpUrlActivity">

    <Button
        android:id="@+id/btn_http_get_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/network_httpurl_get_content" />


    <Button
        android:id="@+id/btn_http_get_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/btn_http_get_content"
        app:layout_constraintTop_toBottomOf="@id/btn_http_get_content"
        android:text="@string/network_httpurl_get_picture" />

    <ImageView
        android:id="@+id/iv_http_show_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/btn_http_get_content"
        app:layout_constraintTop_toBottomOf="@id/btn_http_get_picture"
        android:src="@mipmap/ic_launcher"/>


</android.support.constraint.ConstraintLayout>