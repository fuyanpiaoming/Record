<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--圆角-->
    <corners
        android:radius="5dp"
        android:bottomLeftRadius="5dp"
        android:bottomRightRadius="5dp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp"/>

    <!--图形大小-->
    <size
        android:width="20dp"
        android:height="20dp"/>

    <!--填充色-->
    <solid
        android:color="@color/color_red"/>

    <!--内边距-->
    <padding
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"/>

    <!--描边-->
    <stroke
        android:width="1dp"
        android:color="@color/color_ceng"
        android:dashGap="1dp"
        android:dashWidth="1dp"/>

    <!--渐变-->
    <gradient
        android:useLevel="false"
        android:type="radial"
        android:startColor="@color/color_ceng"
        android:gradientRadius="3dp"
        android:endColor="@color/color_ruo_cao"
        android:centerY="0.5"
        android:centerX="0.5"
        android:centerColor="@color/color_bao_dun"
        android:angle="0" />
</shape>