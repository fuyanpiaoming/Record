<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.TestNotificationActivity">

    <Button
        android:id="@+id/test_notification_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="类型一"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/test_notification_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="类型二"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/test_notification_btn1"/>

    <Button
        android:id="@+id/test_notification_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="类型三"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/test_notification_btn2"/>

</androidx.constraintlayout.widget.ConstraintLayout>