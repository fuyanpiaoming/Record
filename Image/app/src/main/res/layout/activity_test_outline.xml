<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.TestOutlineActivity">

    <ImageView
        android:id="@+id/test_outline_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="192dp"
        android:src="@drawable/leave4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/test_outline_btn_rect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ClipRect" />

        <Button
            android:id="@+id/test_outline_btn_outline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ClipOutline" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>